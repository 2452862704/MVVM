<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp">
    <androidx.cardview.widget.CardView
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        app:cardCornerRadius="10dp"
        android:id="@+id/mGoodsDetailItemCv">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mGoodsDetailItemIv"
                android:layout_width="match_parent"
                android:layout_height="match_parent"></ImageView>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true">
                <View android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="#1c1c1c"
                    android:alpha="0.5"/>
                <TextView
                    android:id="@+id/mGoodsDetailItemPriceTv"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="5000.00￥"
                    android:textColor="#Ff0000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
                <TextView
                    android:id="@+id/mGoodsDetailItemTitleTv"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:marqueeRepeatLimit="-1"
                    android:singleLine="true"
                    android:textSize="15sp"
                    android:textColor="#444444"
                    android:layout_above="@id/mGoodsDetailItemPriceTv"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:text="Apple MacBook Air 13.3英寸笔记本电脑 银色(Core i5 处理器/8GB内存/128GB SSD闪存 MMGF2CH/A)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"></TextView>
            </RelativeLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>