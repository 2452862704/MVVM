<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="320dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/value_head_img"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/bg_me_header"/>
        <TextView
            style="@style/MatchWrap"
            android:textColor="@color/text_normal"
            android:paddingLeft="@dimen/common_padding_middle"
            android:paddingRight="@dimen/common_padding_middle"
            android:paddingTop="@dimen/common_padding_middle"
            android:id="@+id/value_head_title"
            android:background="@drawable/border_top"/>
        <TextView
            style="@style/MatchWrap"
            android:padding="@dimen/common_padding_middle"
            android:textColor="@color/common_red"
            android:textSize="@dimen/text_big_size"
            android:id="@+id/value_head_dec"
            android:background="@drawable/border_bottom"/>
        <RelativeLayout
            style="@style/MatchWrap"
            android:background="@drawable/border_all"
            android:layout_marginTop="@dimen/common_margin"
            android:padding="@dimen/common_padding_middle">
            <TextView
                android:id="@+id/mSkuLabelTv"
                style="@style/WrapWrap"
                android:textSize="@dimen/text_small_size"
                android:textColor="@color/text_dark"
                android:text="已选"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/mSkuSelectedTv"
                style="@style/WrapWrap"
                android:textColor="@color/text_light_dark"
                android:text="8961蓝色，L,1件"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/mSkuLabelTv"
                android:layout_marginLeft="@dimen/common_margin"
                android:layout_toLeftOf="@+id/mMoreIv"
                android:layout_marginRight="@dimen/common_margin"
                android:maxLines="1"
                android:ellipsize="end"/>

            <ImageView
                android:id="@+id/mMoreIv"
                style="@style/WrapWrap"
                android:layout_alignParentRight="true"
                android:src="@drawable/icon_gray_more" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>