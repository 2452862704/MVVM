<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:ignore="MissingDefaultResource">
    <data>
        <variable name="vm"
            type="com.example.usergroup.viewmodel.LoginViewModel"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/common_blue">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/icon_back"
                android:layout_centerVertical="true"
                android:layout_marginLeft="15dp"
                android:onClick="@{()->vm.finish()}"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="注册"
                android:onClick="@{()->vm.register()}"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:textColor="@color/white"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </RelativeLayout>
        <LinearLayout android:background="@drawable/border_corner_all"
            android:layout_margin="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <EditText android:id="@+id/mMobileEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:paddingLeft="5dp"
                android:hint="请输入手机号码"
                android:text="@={vm.phone}"
                android:drawableLeft="@drawable/icon_user_name"
                android:drawablePadding="5dp"
                android:inputType="phone"/>
            <View android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/common_divider"/>
            <EditText android:id="@+id/mPwdEt"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:paddingLeft="5dp"
                android:hint="请输入密码"
                android:text="@={vm.pwd}"
                android:drawableLeft="@drawable/icon_pwd"
                android:drawablePadding="5dp"
                android:inputType="textPassword"/>
        </LinearLayout>
        <Button
            android:id="@+id/mLoginBtn"
            style="@style/FullBtnStyle"
            android:onClick="@{()->vm.login()}"
            android:text="登录"/>
        <TextView
            android:id="@+id/mForgetPwdTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/common_blue"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:onClick="@{()->vm.forget()}"
            android:text="忘记密码？"/>
    </LinearLayout>

</layout>